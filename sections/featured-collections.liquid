{% comment %}
  This section is used in the list-collections template to render a list of
  collections with an interactive sidebar and preview area.
{% endcomment %}

<div class="p-6 flex flex-col lg:flex-row gap-8 lg:mx-20">
  
  <!-- Collections Sidebar -->
  <div class="lg:w-1/3">
    <h1 class="text-5xl lg:text-4xl mb-6">{{ 'collections.title' | t }}</h1>
    
    <nav class="flex flex-row gap-6 lg:gap-3 px-4 lg:flex-col overflow-x-scroll lg:overflow-hidden">
      {% if section.settings.collection_list %}
        {% for collection in section.settings.collection_list %}
          {% unless collection.products.size == 0 %}
            <button class="collection-link w-max p-2 rounded-lg hover:bg-gray-100 transition-all cursor-pointer border-0 hover:border-l-4" data-collection-handle="{{ collection.handle }}" data-collection-title="{{ collection.title | escape }}" data-collection-id="{{ collection.id }}" >
              <h3 class="text-2xl lg:text-3xl w-max">{{ collection.title }}</h3>
            </button>
          {% endunless %}
        {% endfor %}
      {% else  %}
        {% for collection in collections %}
          {% unless collection.products.size == 0 %}
            <button class="collection-link text-left w-max p-2 rounded-lg hover:bg-gray-100 transition-all cursor-pointer border-0 hover:border-l-4" data-collection-handle="{{ collection.handle }}" data-collection-title="{{ collection.title | escape }}" data-collection-id="{{ collection.id }}" >
              <h3 class="text-2xl lg:text-3xl w-max">{{ collection.title }}</h3>
            </button>
          {% endunless %}
        {% endfor %}
      {% endif %}
    </nav>
  </div>

  <!-- Collections Preview -->
  <div class="lg:w-2/3">
    <div class="preview-default text-center py-20 h-full flex items-center">
      <div class="max-w-md mx-auto">
        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <h2 class="text-2xl font-bold text-gray-700 mb-2">Select a Collection</h2>
        <p class="text-gray-500">Click on any collection name to see products</p>
      </div>
    </div>

    <div class="preview-loading hidden text-center py-20">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-black mx-auto mb-4"></div>
      <p class="text-gray-600 text-3xl">Loading <span></span> Collection...</p>
    </div>

    <!-- Preview Content -->
    <div class="preview-content hidden">
      <div class="collection-header mb-6 flex flex-wrap justify-between items-start">
        <h2 class="collection-title text-4xl h-max"></h2>
        <div class="text-center">
          <a href="#" class="group view-collection text-black transition-all duration-300 text-2xl pe-2">
            View Full Collection <span class="relative left-0 group-hover:left-2 transition-all duration-[400ms] will-change-[left]">â†’</span>
          </a>
        </div>
      </div>

      <!-- Products Grid (2x2) -->
      <div class="products-grid grid grid-cols-2 gap-6 mb-6">
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const collectionLink = document.querySelectorAll('.collection-link');

    const previewDefault = document.querySelector('.preview-default');
    const previewLoading = document.querySelector('.preview-loading');
    const previewContent = document.querySelector('.preview-content');
    const productsGrid = document.querySelector('.products-grid');
    
    collectionLink.forEach(item => {
      item.addEventListener('click', async function() {
        // Remove active state from all items
        collectionLink.forEach(nav => {
          nav.classList.remove('border-black', 'bg-gray-100');
        });
        
        // Add active state to clicked item
        this.classList.add('border-black', 'bg-gray-100');
        
        // Get collection data
        const handle = this.dataset.collectionHandle;
        const title = this.dataset.collectionTitle;
        previewLoading.querySelector('span').innerHTML = title;
        
        // Show loading
        previewDefault.classList.add('hidden');
        previewContent.classList.add('hidden');
        previewLoading.classList.remove('hidden');
        
        try {
          // Fetch products from collection
          const response = await fetch(`/collections/${handle}/products.json?limit=4`);
          const data = await response.json();

          console.log(data);
        
          productsGrid.innerHTML = '';

          if (!data.products) console.log('gotcha');
          
          data.products.slice(0, 2).forEach(product => {
            const productCard = createProductCard(product);
            productsGrid.appendChild(productCard);
          });
          
          // Update the view collection button
          document.querySelector('.view-collection').href = `/collections/${handle}`;
          
          setTimeout(function(){
            previewLoading.classList.add('hidden');
            previewContent.classList.remove('hidden');
          }, 400)

          
        } catch (error) {
          console.error('Error loading collection:', error);
          previewLoading.classList.add('hidden');
          previewDefault.classList.remove('hidden');
        }
      });
    });
    
    function createProductCard(product) {
      const card = document.createElement('div');
      card.className = 'product-card group';
      
      // Use the first image from the images array
      const imageUrl = (product.images && product.images[0] && product.images[0].src) ? 
        product.images[0].src.replace(/(\.[^\.]*$)/, '_400x400$1') : 
        'https://via.placeholder.com/400x400/f8f9fa/6c757d?text=No+Image';
      
      card.innerHTML = `
        <a href="/products/${product.handle}" class="block relative">
          <div class="aspect-square rounded-lg overflow-hidden mb-3">
            <img 
              src="${imageUrl}" 
              alt="${product.title}"
              class="w-full h-full object-cover scale-100 group-hover:scale-[1.05] transition-transform duration-700 ease-out will-change-transform"
            />
          </div>
          <h3 class="text-3xl absolute bg-white opacity-0 group-hover:opacity-100 pt-5 pl-5 -bottom-6 -left-1 -right-1 group-hover:bottom-0 group-hover:text-gray-600 transition-all ease-out will-change-transform duration-[400ms]">${product.title}</h3>
        </a>
      `;
      
      return card;
    }
  });
</script>

{% schema %}
{
  "name": "Featured Collections",
  "tag": "section", 
  "class": "py-8 relative z-10 bg-white",
  "settings": [
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 5
    }
  ],
  "presets": [{ "name": "Featured Collections" }]

}
{% endschema %}
