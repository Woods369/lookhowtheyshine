{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

<section class="bg-black px-4 sm:px-6 lg:px-8 py-8 bg-black pt-40">
  <h1 class="text-2xl md:text-3xl font-bold mb-8 text-white">{{ page.title }}</h1>
</section>

<section>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {{ page.content }}
  </div>
</section>

{% style %}
  
  #shopify-section-{{ section.id }} {
    p {
      margin-bottom: 30px;
    }

    ul + h2 {
      margin-top: 30px;
    }

    h2 {
      font-weight: 700;
      margin-bottom: 15px;
    }
  }

  header:has( + #shopify-section-{{ section.id }}) {
    background-color: black;
    box-shadow: 0px 10px 15px -3px rgba(0,0,0,0.1);

    svg {
      color: white;
    }
  }

  .main-content:has( > #shopify-section-{{ section.id }}) + footer {
    background-color: black !important;
    
    * {
      color: white !important;
    }

    .footer__payment {
      display: none !important;
    }
  }
  

{% endstyle %}

{% schema %}
{
  "name": "t:general.page",
  "tag": "article",
  "class": "w-full bg-white",
  "settings": []
}
{% endschema %}