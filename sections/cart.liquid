{% comment %}
  Cart section - Clean black & white with psychological button colors
{% endcomment %}

<div class="cart-page" style="min-height: 60vh; padding: 60px 0;">
  <div class="container max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-5xl font-black mb-12 text-center text-black">YOUR CART</h1>

    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post" novalidate class="cart-form">
        
        <!-- Cart Items -->
        <div class="cart-items mb-16">
          {% for item in cart.items %}
            <div class="cart-item bg-white p-6 rounded-lg border-2 border-black mb-6">
              <div class="flex flex-col md:flex-row gap-6">
                
                <!-- Product Image -->
                <div class="cart-item-image w-full md:w-32">
                  {% if item.image %}
                    <img src="{{ item.image | image_url: width: 300 }}" 
                         alt="{{ item.image.alt | escape }}" 
                         class="w-full h-full object-cover rounded border-2 border-black">
                  {% endif %}
                </div>
                
                <!-- Product Details -->
                <div class="cart-item-details flex-1">
                  <h3 class="text-xl font-bold mb-2 text-black">
                    <a href="{{ item.url }}" class="hover:text-gray-600">{{ item.product.title }}</a>
                  </h3>
                  
                  {% if item.variant.title != 'Default Title' %}
                    <p class="text-gray-600 mb-2">{{ item.variant.title }}</p>
                  {% endif %}
                  
                  <div class="text-black font-bold text-lg mb-4">
                    {{ item.final_price | money }}
                  </div>
                  
                  <!-- Quantity Controls -->
                  <div class="flex items-center justify-between flex-wrap gap-4">
                    <div class="flex items-center space-x-4">
                      <label for="updates_{{ item.key }}" class="font-bold">Qty:</label>
                      <input type="number" 
                             name="updates[]" 
                             id="updates_{{ item.key }}" 
                             value="{{ item.quantity }}" 
                             min="0"
                             class="w-20 text-center border-2 border-black rounded py-2 font-bold">
                      <span class="text-gray-600 font-semibold">= {{ item.final_line_price | money }}</span>
                    </div>
                    
                    <button type="button" 
                            class="bg-red-600 text-white px-6 py-3 rounded font-bold hover:bg-red-700 transition-all border-2 border-black"
                            onclick="document.getElementById('updates_{{ item.key }}').value = '0'; this.closest('form').submit();">
                      REMOVE
                    </button>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        
        <!-- Cart Totals & Actions -->
        <div class="cart-footer bg-white p-8 rounded-lg border-4 border-black mt-16">
          <div class="flex flex-col md:flex-row justify-between items-center gap-8">
            
            <!-- Totals -->
            <div class="cart-totals">
              <div class="flex items-center gap-4 mb-2">
                <span class="text-2xl font-bold text-black">SUBTOTAL:</span>
                <span class="text-3xl font-black text-black">{{ cart.total_price | money }}</span>
              </div>
              <p class="text-sm text-gray-600">Taxes and shipping calculated at checkout</p>
            </div>
            
            <!-- Actions -->
            <div class="cart-actions flex flex-col sm:flex-row gap-4">
              <button type="submit" name="update" class="bg-white text-black px-8 py-4 rounded font-black text-lg border-2 border-black hover:bg-gray-100 transition-all min-h-[60px]">
                UPDATE CART
              </button>
              <button type="submit" name="checkout" class="bg-green-600 text-white px-10 py-4 rounded font-black text-xl hover:bg-green-700 transition-all border-2 border-black min-h-[60px]">
                CHECKOUT
              </button>
            </div>
          </div>
        </div>
      </form>
      
    {% else %}
      <!-- Empty Cart -->
      <div class="cart-empty text-center py-20 border-4 border-black rounded-lg bg-white">
        <div class="text-8xl mb-6">ðŸ›’</div>
        <h2 class="text-3xl font-bold mb-4 text-black">Your cart is empty</h2>
        <p class="text-gray-600 mb-8 text-lg">Time to fill it with amazing products!</p>
        <a href="{{ routes.all_products_collection_url }}" class="inline-block bg-black text-white px-12 py-5 rounded font-black text-xl hover:bg-gray-800 transition-all border-2 border-black">
          START SHOPPING
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}
