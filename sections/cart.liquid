{% comment %}
  Fixed cart section with proper checkout functionality
{% endcomment %}

<div class="cart-section">
  <h1>Your {{ 'cart.title' | t }}</h1>

  {% if cart.item_count == 0 %}
    <div class="cart-empty">
      <p>{{ 'cart.empty' | t }}</p>
      <a href="{{ routes.root_url }}" class="button">{{ 'cart.continue_shopping' | t }}</a>
    </div>
  {% else %}
    <form action="{{ routes.cart_url }}" method="post" novalidate>
      
      <table class="cart-table">
        {% for item in cart.items %}
          <tr class="cart-item">
            <td class="cart-item-product">
              {% if item.image %}
                <img src="{{ item.image | image_url: width: 100, height: 100 }}" alt="{{ item.image.alt | escape }}" width="100" height="100">
              {% endif %}
              <div>
                <h3><a href="{{ item.url }}">{{ item.product.title }}</a></h3>
                {% if item.variant.title != 'Default Title' %}
                  <p>{{ item.variant.title }}</p>
                {% endif %}
                <p>{{ item.price | money }}</p>
              </div>
            </td>
            
            <td class="cart-item-quantity">
              <label for="updates_{{ item.variant.id }}">Quantity:</label>
              <input 
                type="number" 
                name="updates[{{ item.variant.id }}]" 
                id="updates_{{ item.variant.id }}"
                value="{{ item.quantity }}" 
                min="0" 
              >
            </td>
            
            <td class="cart-item-total">
              {{ item.line_price | money }}
            </td>
          </tr>
        {% endfor %}
      </table>

      <div class="cart-footer">
        <p><strong>Subtotal: {{ cart.total_price | money }}</strong></p>
        
        <div class="cart-actions">
          <button type="submit" name="update">Update Cart</button>
          <a href="/checkout" class="checkout-button bg-[color-mix(in_srgb,green_75%,transparent)] text-white p-[15px] text-base cursor-pointer border-none transition-opacity duration-300 ease-in-out hover:opacity-90">Checkout</a>
        </div>
      </div>
    </form>
  {% endif %}
</div>

{% style %}
  .cart-section {
    margin: 100px 0 0 0;
    display: grid;
    place-items: center;
    width: 100%;
  }
{% endstyle %}

{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
