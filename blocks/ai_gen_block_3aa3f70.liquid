{% doc %}
  @prompt
    A Standard Signup pop up block when people land the page which a close button. I want it to be in a modal mobile can be full screen or not - add customisation and also embed and link up to the Klaviyo Form Analytics and mass Email Send out App 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-signup-popup-overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity }});
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    padding: 20px;
    box-sizing: border-box;
  }

  .ai-signup-popup-overlay-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-signup-popup-modal-{{ ai_gen_id }} {
    background-color: {{ block.settings.modal_background_color }};
    border-radius: {{ block.settings.modal_border_radius }}px;
    max-width: {{ block.settings.modal_max_width }}px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    transform: scale(0.8) translateY(20px);
    transition: transform 0.3s ease;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .ai-signup-popup-overlay-{{ ai_gen_id }}.active .ai-signup-popup-modal-{{ ai_gen_id }} {
    transform: scale(1) translateY(0);
  }

  .ai-signup-popup-close-{{ ai_gen_id }} {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.close_button_color }};
    z-index: 10;
    border-radius: 50%;
    transition: background-color 0.2s ease;
  }

  .ai-signup-popup-close-{{ ai_gen_id }}:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .ai-signup-popup-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-signup-popup-image-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 20px;
  }

  .ai-signup-popup-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-signup-popup-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }

  .ai-signup-popup-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-signup-popup-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 15px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-signup-popup-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 25px;
    line-height: 1.4;
  }

  .ai-signup-popup-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .ai-signup-popup-input-{{ ai_gen_id }} {
    padding: 15px;
    border: 2px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 16px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    transition: border-color 0.2s ease;
  }

  .ai-signup-popup-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_color }};
  }

  .ai-signup-popup-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-signup-popup-button-{{ ai_gen_id }} {
    padding: 15px 30px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.1s ease;
  }

  .ai-signup-popup-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
  }

  .ai-signup-popup-disclaimer-{{ ai_gen_id }} {
    font-size: {{ block.settings.disclaimer_size }}px;
    color: {{ block.settings.disclaimer_color }};
    margin-top: 15px;
    line-height: 1.3;
  }

  .ai-signup-popup-success-{{ ai_gen_id }} {
    display: none;
    text-align: center;
    color: {{ block.settings.success_color }};
    font-size: 16px;
    padding: 20px;
  }

  .ai-signup-popup-error-{{ ai_gen_id }} {
    display: none;
    color: {{ block.settings.error_color }};
    font-size: 14px;
    margin-top: 10px;
  }

  @media screen and (max-width: 768px) {
    .ai-signup-popup-overlay-{{ ai_gen_id }} {
      padding: {% if block.settings.mobile_fullscreen %}0{% else %}10px{% endif %};
    }

    .ai-signup-popup-modal-{{ ai_gen_id }} {
      {% if block.settings.mobile_fullscreen %}
        max-width: 100%;
        width: 100%;
        height: 100%;
        max-height: 100%;
        border-radius: 0;
      {% else %}
        max-width: 95%;
      {% endif %}
    }

    .ai-signup-popup-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-signup-popup-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-signup-popup-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.7 }}px;
    }
  }

