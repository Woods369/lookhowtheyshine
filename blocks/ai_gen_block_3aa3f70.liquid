    width: 100%;
  }

  .ai-signup-popup-klaviyo-form-{{ ai_gen_id }} .klaviyo-form {
    width: 100% !important;
  }
{% endstyle %}

<signup-popup-{{ ai_gen_id }}
  class="ai-signup-popup-{{ ai_gen_id }}"
  data-delay="{{ block.settings.popup_delay }}"
  data-show-once="{{ block.settings.show_once }}"
  data-klaviyo-form-id="{{ block.settings.klaviyo_form_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-signup-popup-overlay-{{ ai_gen_id }}" id="ai-signup-popup-overlay-{{ ai_gen_id }}">
    <div class="ai-signup-popup-modal-{{ ai_gen_id }}">
      <button
        class="ai-signup-popup-close-{{ ai_gen_id }}"
        aria-label="Close popup"
        type="button"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>

      <div class="ai-signup-popup-content-{{ ai_gen_id }}">
        {% if block.settings.popup_image %}
          <div class="ai-signup-popup-image-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.popup_image | image_url: width: 600 }}"
              alt="{{ block.settings.popup_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.popup_image.width }}"
              height="{{ block.settings.popup_image.height }}"
            >
          </div>
        {% elsif block.settings.show_placeholder_image %}
          <div class="ai-signup-popup-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="ai-signup-popup-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.subheading != blank %}
          <div class="ai-signup-popup-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}

        <div class="ai-signup-popup-success-{{ ai_gen_id }}" id="ai-signup-popup-success-{{ ai_gen_id }}">
          {{ block.settings.success_message }}
        </div>

        {% if block.settings.use_klaviyo and block.settings.klaviyo_form_id != blank %}
          <div class="ai-signup-popup-klaviyo-form-{{ ai_gen_id }}" id="ai-signup-popup-klaviyo-form-{{ ai_gen_id }}">
          </div>
        {% else %}
          <form class="ai-signup-popup-form-{{ ai_gen_id }}" id="ai-signup-popup-form-{{ ai_gen_id }}">
            {% if block.settings.collect_name %}
              <input
                type="text"
                name="name"
                class="ai-signup-popup-input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.name_placeholder }}"
                required
              >
            {% endif %}

            <input
              type="email"
              name="email"
              class="ai-signup-popup-input-{{ ai_gen_id }}"
              placeholder="{{ block.settings.email_placeholder }}"
              required
            >

            {% if block.settings.collect_phone %}
              <input
                type="tel"
                name="phone"
                class="ai-signup-popup-input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.phone_placeholder }}"
              >
            {% endif %}

            <button type="submit" class="ai-signup-popup-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </button>

            <div class="ai-signup-popup-error-{{ ai_gen_id }}" id="ai-signup-popup-error-{{ ai_gen_id }}"></div>
          </form>
        {% endif %}

        {% if block.settings.disclaimer != blank %}
          <div class="ai-signup-popup-disclaimer-{{ ai_gen_id }}">{{ block.settings.disclaimer }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</signup-popup-{{ ai_gen_id }}>

<script>
  (function() {
    class SignupPopup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.overlay = this.querySelector('#ai-signup-popup-overlay-{{ ai_gen_id }}');
        this.closeButton = this.querySelector('.ai-signup-popup-close-{{ ai_gen_id }}');
        this.form = this.querySelector('#ai-signup-popup-form-{{ ai_gen_id }}');
        this.successMessage = this.querySelector('#ai-signup-popup-success-{{ ai_gen_id }}');
        this.errorMessage = this.querySelector('#ai-signup-popup-error-{{ ai_gen_id }}');
        this.klaviyo_form_container = this.querySelector('#ai-signup-popup-klaviyo-form-{{ ai_gen_id }}');
        
        this.delay = parseInt(this.dataset.delay) * 1000;
        this.showOnce = this.dataset.showOnce === 'true';
        this.klaviyoFormId = this.dataset.klaviyoFormId;
        this.storageKey = 'ai-signup-popup-{{ ai_gen_id }}-shown';
      }

      connectedCallback() {
        this.setupEventListeners();
        this.initializePopup();
      }

      setupEventListeners() {
        this.closeButton.addEventListener('click', () => this.closePopup());
        
        this.overlay.addEventListener('click', (e) => {
          if (e.target === this.overlay) {
            this.closePopup();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.overlay.classList.contains('active')) {
            this.closePopup();
          }
        });

        if (this.form) {
          this.form.addEventListener('submit', (e) => this.handleFormSubmit(e));
        }
      }

      initializePopup() {
        if (this.showOnce && localStorage.getItem(this.storageKey)) {
          return;
        }

        if (this.klaviyoFormId && this.klaviyo_form_container) {
          this.loadKlaviyoForm();
        }

        setTimeout(() => {
          this.showPopup();
        }, this.delay);
      }

      loadKlaviyoForm() {
        if (window._klOnsite) {
          window._klOnsite.push(['openForm', this.klaviyoFormId]);
        } else {
          const script = document.createElement('script');
          script.src = 'https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=' + this.klaviyoFormId.split('/')[0];
          script.async = true;
          script.onload = () => {
            if (window._klOnsite) {
              window._klOnsite.push(['openForm', this.klaviyoFormId]);
            }
          };
          document.head.appendChild(script);
        }

        const klaviyoEmbed = document.createElement('div');
        klaviyoEmbed.className = 'klaviyo-form-' + this.klaviyoFormId.replace('/', '-');
        this.klaviyo_form_container.appendChild(klaviyoEmbed);
      }

      showPopup() {
        this.overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
        
        if (this.showOnce) {
          localStorage.setItem(this.storageKey, 'true');
        }
      }

      closePopup() {
        this.overlay.classList.remove('active');
        document.body.style.overflow = '';
      }

      async handleFormSubmit(e) {
        e.preventDefault();
        
        const formData = new FormData(this.form);
        const data = Object.fromEntries(formData);

        try {
          const response = await fetch('/contact', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams({
              'form_type': 'contact',
              'utf8': 'âœ“',
              'contact[email]': data.email,
              'contact[name]': data.name || '',
              'contact[phone]': data.phone || '',
              'contact[body]': 'Newsletter signup from popup'
            })
          });

          if (response.ok) {
            this.showSuccess();
          } else {
            throw new Error('Submission failed');
          }
        } catch (error) {
          this.showError('Something went wrong. Please try again.');
        }
      }

      showSuccess() {
        this.form.style.display = 'none';
        this.successMessage.style.display = 'block';
        
        setTimeout(() => {
          this.closePopup();
        }, 3000);
      }

      showError(message) {
        this.errorMessage.textContent = message;
        this.errorMessage.style.display = 'block';
        
        setTimeout(() => {
          this.errorMessage.style.display = 'none';
        }, 5000);
      }
    }

    customElements.define('signup-popup-{{ ai_gen_id }}', SignupPopup{{ ai_gen_id }});
  })();
</script>

