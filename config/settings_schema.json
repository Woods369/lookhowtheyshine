[
  {
    "name": "theme_info",
    "theme_name": "Look How They Shine",
    "theme_version": "0.1.0",
    "theme_author": "Ewan Lockwood",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_heading_font",
        "default": "palatino_n4",
        "label": "t:general.heading_font"
      },
      {
        "type": "font_picker",
        "id" : "type_body_font",
        "default": "arsenal_n4",
        "label": "t:general.body_font"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "100vw",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "100vw"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 0
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "t:general.brand",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:labels.logo"
      },
            {
        "type": "image_picker",
        "id": "favicon",
        "label": "t:labels.favicon"
      },
      {
        "type": "text",
        "id": "company_name",
        "label": "t:labels.company_name",
        "default": "Look How They Shine"
      }
    ]
  }
]