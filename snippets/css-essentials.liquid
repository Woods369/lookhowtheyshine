<link rel="stylesheet" href="{{ 'splide.min.css' | asset_url }}">

{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_heading_font | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    --font-primary--heading: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    --font-primary--style: {{ settings.type_heading_font.style }};
    --font-primary--weight: {{ settings.type_heading_font.weight }};

    --font-primary--body: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    --font-primary--body-style: {{ settings.type_body_font.style }};
    --font-primary--body-weight: {{ settings.type_body_font.weight }};

    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
  }

  * {
    box-sizing: border-box;
  }

  img,
  picture,
  video,
  canvas {
    display: block;
    max-width: 100%;
    height: auto;
  }

  input,
  textarea,
  select {
    font: inherit;
    border-radius: var(--style-border-radius-inputs);
  }

  select {
    background-color: var(--color-background);
    color: currentcolor;
  }

  dialog {
    background-color: var(--color-background);
    color: var(--color-foreground);
  }


  p {
    text-wrap: pretty;
    transform: scaleX(0.8);
  }
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-primary--heading)
    transform: scaleX(0.8);
    font-style: italic;
  }

  :not(:where(h1, h2, h3, h4, h5, h6)) {
    font-family: var(--font-primary--body);
  }

  p:empty {
    display: none;
  }

  :is(p, h1, h2, h3, h4, h5, h6):last-child,
  :where(p, h1, h2, h3, h4, h5, h6) + :has(+ :empty:last-child) {
    margin-block-end: 0;
  }

  /** Theme styles */
  body {
    font-family: var(--font-primary--body);
    background-color: var(--color-background);
    color: var(--color-foreground);
    margin: 0;
    padding: 0;
  }

  body:has( > .main-content > header.open ) {
    max-height: 100svh;
    overflow: hidden;
  }

  section:last-of-type {
    border-bottom: solid 1px #e1e1e1;
    box-shadow: 0px 10px 15px -3px rgba(0,0,0,0.1);
  }

  /* Polices */
  .main-content:has(.shopify-policy__container) {
    background: white;
    padding: 140px 0 60px;
    padding: if(media(width < 540px): 120px 0; else: 140px 0 80px)
  }

  .main-content:has(.shopify-policy__container) + footer {
      background-color: black !important;
      padding: 100px 0 60px;

      * {
          color: white !important;
      }
  }
{% endstyle %}
