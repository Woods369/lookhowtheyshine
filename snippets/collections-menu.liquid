{%- comment -%}
  Dropdown Collections Menu Snippet
  Usage: {% render 'collections-menu' %}
{%- endcomment -%}

<div class="collections-list max-h-100 overflow-auto">
  {%- for collection in collections -%}
    {%- unless collection.handle == 'frontpage' -%}
      {%- if collection.products_count > 0 or collection.products.size == 0 -%}
        <a 
          href="{{ collection.url }}" 
          class="menu-item block py-2 px-6 text-gray-700 text-4xl"
        >
          {{ collection.title }}
          <span class="text-sm text-gray-400">({{ collection.products_count }})</span>
        </a>
      {%- endif -%}
    {%- endunless -%}
  {%- endfor -%}
</div>
